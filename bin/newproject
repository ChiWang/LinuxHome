#! /bin/bash
#
#=============================================================================
#       FileName :          newproject
#       Version  :          0.0.1
#       Author   :          Chi Wang    (chiwang@mail.ustc.edu.cn)
#       Time     :          2013-09-28   22:06:28
#
#------------------------------------------------------------------------------
#       Description  :
#           Useage:     newproject projectName
#------------------------------------------------------------------------------
#       History  :
#                                          Update:  2013-09-28   22:07:20
#=============================================================================
#

#+ usage
if [ $# == 1 ];then
  echo "    Setting up project \"$1\"" 
else
  echo "    Usage:  newproject projectName"
  exit
fi
#+

#+ setup
mkdir include src 2>/dev/null
path="$HOME/share/common"
cp $path/SConstruct ./
cp $path/SConscript ./src/
more $path/mainTemplate.cc >./src/$1.cc
sed "s/MyX/$1/g" -i ./src/* 
#+

#+ Readme.md --> the same name as github
if [ -f Readme.md ];then
    read -p "   Readme.md is exist, do you want to create a new one {yes|no}?:      "   ans
fi
if [ "XXX$ans" != "XXXno" ]; then
    echo "">Readme.md
    echo "              Project:     $1"                  >>Readme.md
    echo "      ======================================================"  >>Readme.md
    echo "          By: $AUTHOR ($AUTHOREMAIL)  `date +%d/%m/%Y`">>Readme.md
    echo "">>Readme.md
    echo "Description"  >>Readme.md
    echo "--------------">>Readme.md
    echo "">>Readme.md
    echo "">>Readme.md
    echo "Usage"        >>Readme.md
    echo "--------------">>Readme.md
    echo "">>Readme.md
    echo "    scons       // will create executable file $1 at ./, and temporary files in ./Scons"       >>Readme.md
    echo "    scons -c    // clean up"    >>Readme.md
    echo "">>Readme.md
    echo "Note"        >>Readme.md
    echo "--------------">>Readme.md
    echo "">>Readme.md
fi
#+


