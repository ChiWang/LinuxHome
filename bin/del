#! /bin/bash
#=====================================================================
#   File:   del
#   Author: Chi WANG  (chiwang@mail.ustc.edu.cn)    02/10/2013
#---------------------------------------------------------------------
#   Description:
#
#   Goal:       rm file into a $TRASH (set in ~/.zprofile)
#   Install:
#       1.  set $TRASH in .zprofile
#       2.  add alias into .zshrc   (alias rm='bash /PathToThisFile/trash.sh')
#---------------------------------------------------------------------
#   History:
#                           Last update:  13/12/2013   14:13:21
#=====================================================================

# move into trash
name=`date "+%y-%m-%d-%H_%M"`
mkdir -p $TRASH/$name

while [ $# != 0 ];do
	mv $1 $TRASH/$name
	shift
done


